# RunPod Serverless API Configuration
# Copy this file to .env and fill in your actual values

# RunPod Endpoint ID (from RunPod Console)
RUNPOD_ENDPOINT_ID=your_endpoint_id_here

# RunPod API Key (from RunPod Console → Settings → API Keys)
RUNPOD_API_KEY=rpa_YOUR_API_KEY_HERE

# API Usage Example:
# POST https://api.runpod.ai/v2/{ENDPOINT_ID}/run
# Headers:
#   Content-Type: application/json
#   Authorization: Bearer {API_KEY}
# Body:
#   {
#     "input": {
#       "file": "base64_encoded_file_or_url",
#       "max_output_tokens": 12384,
#       "include_images": true,
#       "include_headers_footers": false,
#       "prompt_type": "ocr_layout"
#     }
#   }

# Supported Input Formats:
# - Images: PNG, JPG, JPEG, WebP, TIFF, BMP, GIF (URL or base64)
# - PDFs: Single or multi-page (URL or base64)

# Optional Parameters:
# - page_range: [0, 1, 2]  # For PDFs: which pages to process (0-indexed)
# - max_output_tokens: 12384  # Default token limit
# - prompt_type: "ocr_layout"  # or "ocr_simple", "ocr_detailed"
# - custom_prompt: "Custom prompt text"  # Override default prompt
