# RunPod API Configuration
RUNPOD_API_KEY=your_runpod_api_key_here

# Endpoint Configuration
RUNPOD_ENDPOINT_NAME=chandra-ocr
DOCKER_IMAGE=your-dockerhub-username/chandra-runpod:latest

# GPU Configuration
# Options: AMPERE_16 (A4000, A5000), AMPERE_24 (A5000), ADA_24 (L40S), AMPERE_40 (A100 40GB), AMPERE_80 (A100 80GB)
GPU_IDS=AMPERE_16

# Scaling Configuration
WORKERS_MAX=3

# Storage Configuration (in GB)
CONTAINER_DISK_GB=20
VOLUME_GB=50

# Model Configuration
MODEL_CHECKPOINT=datalab-to/chandra
MAX_OUTPUT_TOKENS=12384

# Optional: HuggingFace Token (for private models)
# HF_TOKEN=your_huggingface_token_here
